<h2 align= "center">Welcome to ChatMe </h2>
<h4 class="ui center aligned icon header">
  <i class="circular blue smile outline icon"></i>
</h4>

<p style="text-align:center"> Say something to your friends!</p>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class = "content" id="messages">
                <div class="ui feed" id="message-container">
                    <%= render @messages %>
                </div>
            </div>
            <div class="extra content">
                <%= form_for(@message, html: {class:"ui reply form", role:"form"}, url: message_path, remote: true) do |f|%>
                    <div class="ui fluid input">
                        <%= f.text_field :message %>
                        <%= f.button '<i class="large blue comments  icon"></i>'.html_safe %>
                    </div>
                <% end %>    
            </div>
            
        </div>
    </div>
    <div class="four wide column">
        
            <div class="ui fluid raised card chatbox">
                <div class="content">
                    <div class="ui inverted blue vertical menu">
                    <a class="active item">
                        Home
                    </a>
                    <a class="item">
                        Messages
                    </a>
                    <a class="item">
                        Friends
                    </a>
                    </div>
                    
                </div>
            </div>
        
    </div>
</div>